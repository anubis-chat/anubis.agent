{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx"
  },
  "include": ["src/index.ts", "src/plugin.ts", "src/character.ts", "src/services/**/*.ts", "src/actions/**/*.ts", "src/frontend/**/*.ts", "src/frontend/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/__tests__/**/*",
    "src/**/cypress/**/*"
  ]
}
